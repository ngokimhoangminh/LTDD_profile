<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="#fece2f">
        <ImageView android:layout_width="85dp"
            android:id="@+id/profileImage"
            android:layout_height="85dp"
            android:src="@drawable/icon_avatar"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngô Kim hoàng Minh"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#171717"
            android:fontFamily="monospace"
            android:layout_toRightOf="@+id/profileImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="msv:1811505310131"
            android:textSize="15sp"
            android:textStyle="italic"
            android:fontFamily="monospace"
            android:layout_toRightOf="@+id/profileImage"
            android:layout_below="@+id/fullname"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="-62dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#fece2f">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imageLable1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon2" />

                <TextView
                    android:id="@+id/payment_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageLable1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:includeFontPadding="false"
                    android:text="$123"
                    android:textColor="#131313"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/payment_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/payment_lable"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="monospace"
                    android:text="Balance"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#fece2f">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/imageLable2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon6"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$123"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/book_lable"
                    android:layout_below="@+id/imageLable2"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:textColor="#131313"
                    android:textSize="20sp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/book_desc"
                    android:layout_below="@+id/book_lable"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp">
                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6AF"
                android:layout_below="@+id/text1"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fullname"
                android:layout_toRightOf="@id/hinh1"
                android:id="@+id/text_lb1"/>
            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/hinh1"
                android:paddingRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon8"
                />
            <TextView
                android:id="@+id/text1"
                android:textColor="#121211"
                android:layout_below="@+id/text_lb1"
                android:layout_toRightOf="@id/hinh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngô Kim Hoàng Minh"
                >
            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_toRightOf="@id/hinh2"
                android:id="@+id/text_lb2"/>
            <ImageView
                android:id="@+id/hinh2"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iconmail"
                />
            <TextView
                android:id="@+id/text2"
                android:textColor="#121211"
                android:layout_below="@+id/text_lb2"
                android:layout_toRightOf="@id/hinh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hoangminhcp10@gmail.com"
                >
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6AF"
                android:layout_below="@+id/text2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_toRightOf="@id/hinh3"
                android:id="@+id/text_lb3"/>
            <ImageView
                android:id="@+id/hinh3"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_phone"
                />
            <TextView
                android:id="@+id/text3"
                android:textColor="#121211"
                android:layout_below="@+id/text_lb3"
                android:layout_toRightOf="@id/hinh3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0941314137"
                >
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6AF"
                android:layout_below="@+id/text3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Class"
                android:layout_toRightOf="@id/hinh4"
                android:id="@+id/text_lb4"/>
            <ImageView
                android:id="@+id/hinh4"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_class"
                />
            <TextView
                android:id="@+id/text4"
                android:textColor="#121211"
                android:layout_below="@+id/text_lb4"
                android:layout_toRightOf="@id/hinh4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120TLTTD04"
                >
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6AF"
                android:layout_below="@+id/text4"/>
        </RelativeLayout>
       <Button
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Update"
           android:textColor="#151515"
           android:background="#fece2f"/>
    </LinearLayout>

</LinearLayout>